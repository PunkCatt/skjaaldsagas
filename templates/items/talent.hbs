<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    <header class="sheet-header flexrow">
        <img class="profile" src="{{item.img}}" data-tooltip="{{item.name}}" data-edit="img">

        <div class="header-details flexrow">
            <h1 class="charname">
                <input name="name" type="text" value="{{item.name}}" placeholder="{{ localize 'SKJAALD.TalentName' }}">
            </h1>

            <div class="item-subtitle">
                <h4 class="item-type">{{ itemType }}</h4>
                <label class="equipped">
                    <input type="checkbox" name="system.display" {{checked system.display}}>
                    {{#if system.display}}
                        {{ localize "SKJAALD.Display" }}
                        {{#if editable}}<i class="fa-solid fa-toggle-on"></i>{{/if}}
                    {{else}}
                        {{ localize "SKJAALD.Undisplayed" }}
                        {{#if editable}}<i class="fa-solid fa-toggle-off"></i>{{/if}}
                    {{/if}}
                </label>
            </div>

            <ul class="summary flexrow">
                <li>
                    <select name="system.talentTree">
                        {{#select talentTree}}
                            <option value="fitness">{{ localize "SKJAALD.Fitness" }}</option>
                            <option value="knowledge">{{ localize "SKJAALD.Knowledge" }}</option>
                            <option value="presence">{{ localize "SKJAALD.Presence" }}</option>
                            <option value="creativity">{{ localize "SKJAALD.Creativity" }}</option>
                            <option value="compound">{{ localize "SKJAALD.Compound" }}</option>
                            <option value="weapons">{{ localize "SKJAALD.Weapons" }}</option>
                        {{/select}}
                    </select>

                </li>
                <li>

                    <select name="system.talentType">
                        {{#select talentType}}
                        <option value="core">{{ localize "SKJAALD.Core" }}</option>
                        <option value="main">{{ localize "SKJAALD.MainBranch" }}</option>
                        <option value="sub">{{ localize "SKJAALD.SubBranch" }}</option>
                        <option value="fringe">{{ localize "SKJAALD.Fringe" }}</option>
                        <option value="compound">{{ localize "SKJAALD.Compound" }}</option>
                        <option value="variable">{{ localize "SKJAALD.Variable" }}</option>
                        {{/select}}
                    </select>
                </li>
                <li>
                    {{> "skjaald.item-source"}}
                </li>
            </ul>
        </div>
    </header>

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "SKJAALD.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "SKJAALD.Details" }}</a>
        <a class="item" data-tab="advancement">{{ localize "SKJAALD.AdvancementTitle" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "skjaald.item-description-custom"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">
            {{#skjaald-concealSection concealDetails}}

            <h3 class="form-header">{{ localize "SKJAALD.ItemTalentDetails" }}</h3>

            {{!-- Talent Type --}}
            <div class="form-group">
                <label>{{ localize "SKJAALD.ItemTalentType" }}</label>
                <select name="system.talentType">
                    <option value="standard">{{ localize "SKJAALD.Standard" }}</option>
                    <option value="compound">{{ localize "SKJAALD.Compound" }}</option>
                    <option value="variable">{{ localize "SKJAALD.Variable" }}</option>
                </select>
            </div>

            {{!-- Parents --}}
            <div class="form-group">
                <h4 class="damage-header">
                {{ localize "SKJAALD.Parents" }}
                    <a class="connection-control add-parent"><i class="fas fa-plus"></i></a>
                </h4>
                {{#each system.talentParents as |parent p| }}

                {{/each}}
            </div>


            {{!-- Children --}}
            {{!-- <div class="form-group">
                <select name="system.talentChildren">
                    <option value="standard">{{ localize "SKJAALD.Standard" }}</option>
                    <option value="compound">{{ localize "SKJAALD.Compound" }}</option>
                    <option value="variable">{{ localize "SKJAALD.Variable" }}</option>
                </select>
            </div> --}}



            {{!-- Consumable Type --}}
            {{!-- <div class="form-group">
                <label>{{ localize "SKJAALD.ItemDieSize" }}</label>
                <select name="system.dieSize">
                    {{selectOptions config.dieTypes selected=system.type.value labelAttr="label"}}
                </select>
            </div>

            <div class="form-group">
                <label>{{ localize "SKJAALD.DieValue" }}</label>
                <div class="form-fields">
                    {{ numberInput system.dieValue name="system.dieValue" min="0" step="1" placeholder="0" }}
                </div>
            </div>

            
            <div class="form-group">
                <label>{{ localize "SKJAALD.MaxQuantity" }}</label>
                <div class="form-fields">
                    {{ numberInput system.dieValue name="system.maxQuantity" min="1" step="1" placeholder="1" }}
                </div>
            </div> --}}


            {{/skjaald-concealSection}}
        </div>

        {{!-- Advancement Tab --}}
        {{> "skjaald.item-advancement"}}
    </section>
</form>
