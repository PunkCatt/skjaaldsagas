                </li>
                <li>
                    <label>
                        <span class="roboto-upper label">{{ localize "SKJAALD.RenownLevel" }}</span>
                        {{#if @root.editable}}
                        <input type="text" name="system.details.level.renown" value="{{ value }}">
                        {{else}}
                        <span class="value">{{ system.details.level.renown }}</span>
                        {{/if}}
                    </label>
                </li>

            </ul>
            
            {{!-- Speed --}}
